<h1>My Order</h1>
{{#if orders.length}}
  {{#each orders}}
    <div class="row">
      <div class="col s6 s3">
        <div class="card">
          <div class="card-content">
            <span class="card-title">
              Order
              <small>{{_id}}</small>
            </span>
            <p class="date">{{date}}</p>
            <p>
              <em>
                {{user.userId.name}}
              </em>
              ({{user.userId.email}})
            </p>
            <ol>
              {{#each devices}}
                <li>
                  {{device.type}}
                  ( x<strong>{{count}}</strong>)
                </li>
              {{/each}}
            </ol>
            <hr />
            <p>Price: <span class="price">{{price}}</span></p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <p>You have't orders</p>
{{/if}}