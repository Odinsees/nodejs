<h1>Basket</h1>
<div id="card">
  {{#if devices.length}}
    <table>
      <thead>
        <tr>
          <th>Device type</th>
          <th>Count</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each devices}}
          <tr>
            <td>{{type}}</td>
            <td>{{count}}</td>
            <td>
              <button
                class="btn btn-small js-remove"
                data-id="{{id}}"
              >Remove</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <p>
      <strong>Price:</strong>
      <span class="price">{{sumPrice}}</span>
    </p>
  {{else}}
    <p>Basket empty</p>
  {{/if}}
</div>