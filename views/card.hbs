<h1>Basket</h1>
<div id="card">
  {{#if devices.length}}
    <table>
      <thead>
        <tr>
          <th>Device type</th>
          <th>Count</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each devices}}
          <tr>
            <td>{{type}}</td>
            <td>{{count}}</td>
            <td>
              <button
                class="btn btn-small js-remove"
                data-id="{{id}}"
                data-csrf="{{@root.csrf}}"
              >Remove</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <p>
      <strong>Price:</strong>
      <span class="price">{{sumPrice}}</span>
    </p>
    <form action="/order" method="post">
      <input type="hidden" name="_csrf" value="{{@root.csrf}}" />
      <button type="submit" class="btn">Make order</button>
    </form>
  {{else}}
    <p>Basket empty</p>
  {{/if}}
</div>