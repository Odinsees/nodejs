<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Login</a></li>
        <li class="tab col s6"><a href="#register">Registration</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
      <h1>log in account</h1>
      <form action="/auth/login" method="POST">
        <div class="row">
          <div class="input-field">
            <input
              name="email"
              value=""
              id="title"
              type="email"
              class="validate"
              required
            />
            <label class="active" for="email">Email</label>
            <span
              class="helper-text"
              data-error="email is required"
              data-success="right"
            ></span>
          </div>
          <div class="input-field">
            <input
              name="password"
              value=""
              id="password"
              type="password"
              class="validate"
              required
            />
            <label class="active" for="password">Password</label>
            <span
              class="helper-text"
              data-error="password is required"
              data-success="right"
            ></span>
          </div>
          <button class="btn btn-primary" type="submit">Login</button>
        </div>
      </form>
    </div>
    <div id="register" class="col s6 offset-s3">
      <h1>Register</h1>
      <form action="/auth/register" method="POST">
        <div class="row">
          <div class="input-field">
            <input
              name="email"
              value=""
              id="rtitle"
              type="email"
              class="validate"
              required
            />
            <label class="active" for="remail">Email</label>
            <span
              class="helper-text"
              data-error="email is required"
              data-success="right"
            ></span>
          </div>
          <div class="input-field">
            <input
              name="password"
              value=""
              id="rpassword"
              type="password"
              class="validate"
              required
            />
            <label class="active" for="rpassword">Password</label>
            <span
              class="helper-text"
              data-error="password is required"
              data-success="right"
            ></span>
          </div>
          <div class="input-field">
            <input
              name="confirm"
              value=""
              id="confirm"
              type="password"
              class="validate"
              required
            />
            <label class="active" for="confirm">Repeat a password</label>
            <span
              class="helper-text"
              data-error="password is required"
              data-success="right"
            ></span>
          </div>
          <button class="btn btn-primary" type="submit">Register</button>
        </div>
      </form>
    </div>
  </div>
</div>