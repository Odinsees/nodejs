<h1>DEVICES</h1>
{{#if devices.length}}
  {{#each devices}}
    <div class="row">
      <div class="col s6 offset-s3">
        <div class="card">
          <div class="card-image">
            <img src="{{img}}" alt={{type}} />
          </div>
          <div class="card-content">
            <span class="card-title">{{type}}</span>
            <p class="price">{{price}}</p>
          </div>
          <div class="card-action">
            <a href="/devices/{{id}}" target="_blank">About this devices</a>
            <a href="/devices/{{id}}/edit?allow=true">Edit information</a>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <p>Devices in process</p>
{{/if}}